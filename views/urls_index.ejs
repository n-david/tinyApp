<!DOCTYPE html>

<html lang="en">
  <head></head>
  <body>
    <% include partials/_header %>
    <h1 align="center">Home</h1>
    <div class="text-center">
      <a href="/urls/new">Create a New Short Link</a>
    </div>
    </br></br>
    <div class="panel panel-default">
      <table class="table">
        <tr>
          <th>Short URL</th>
          <th>Actual URL</th>
        </tr>
        <% for (url in urls) { %>
          <tr>
            <td><%= url %></td>
            <td><a href="/u/<%= url %>"><%= urls[url]%></a></td>
            <td><a href="/urls/<%= url %>">Update</a></td>
            <td>
              <form method="POST" action="/urls/<%= url %>/delete">
                <input type="submit" value="Delete" class="btn btn-random btn-xs">
              </form>
            </td>
          </tr>
        <% } %>
      </table>
    </div>
  </body>
</html>
